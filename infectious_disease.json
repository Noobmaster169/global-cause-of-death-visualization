{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Infectious Disease Trends Over Time",
  "width": 500,
  "height": 400,
  "data": {
    "url": "data/total_death_by_year.csv"
  },
  "transform": [
    {
      "filter": "indexof(['HIV/AIDS', 'Tuberculosis', 'Malaria', 'Lower Respiratory Infections', 'Diarrheal Diseases'], datum.category) >= 0"
    },
    {
      "calculate": "datum.total_deaths / 1000000",
      "as": "deaths_millions"
    }
  ],
  "mark": {
    "type": "area",
    "opacity": 0.7
  },
  "encoding": {
    "x": {
      "field": "year",
      "type": "ordinal",
      "title": "Year"
    },
    "y": {
      "field": "deaths_millions",
      "type": "quantitative",
      "title": "Deaths (Millions)",
      "stack": true
    },
    "color": {
      "field": "category",
      "type": "nominal",
      "title": "Infectious Disease",
      "scale": {
        "range": ["#e41a1c", "#377eb8", "#4daf4a", "#984ea3", "#ff7f00"]
      }
    },
    "tooltip": [
      {"field": "category", "type": "nominal", "title": "Disease"},
      {"field": "year", "type": "ordinal", "title": "Year"},
      {"field": "total_deaths", "type": "quantitative", "title": "Deaths", "format": ","},
      {"field": "deaths_millions", "type": "quantitative", "title": "Deaths (Millions)", "format": ".2f"}
    ]
  }
}
